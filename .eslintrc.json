{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-var-requires":"off",
        "eqeqeq":"error",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "keyword-spacing":"error",
        "no-useless-catch":"off",
        "quotes": ["error", "single"],
        "no-undef":"off"
    }
}
